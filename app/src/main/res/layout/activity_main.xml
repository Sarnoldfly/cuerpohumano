<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="2"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/frenteMusculo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/frentemusculo"
        android:clickable="true"
        android:onClick="onImageClick"
        android:tag="image1"
        android:contentDescription="@string/string_cuerpohumano"
        android:focusable="true" />

    <ImageView
        android:id="@+id/espaldaMusculo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/frentehueso"
        android:clickable="true"
        android:onClick="onImageClick"
        android:tag="image1"/>

    <ImageView
        android:id="@+id/frenteHueso"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/espaldamusculo"
        android:clickable="true"
        android:onClick="onImageClick"
        android:tag="image1"/>

    <ImageView
        android:id="@+id/espaldaHueso"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/espaldahueso"
        android:clickable="true"
        android:onClick="onImageClick"
        android:tag="image1"/>
</GridLayout>
